<header class="bg-slate-900 text-neutral-100">
  <div class="relative flex justify-between px-4 py-3">
    <div class="md:hidden w-5" id="mobile-button">
      {% render 'MobileHamburgerMajor' %}
    </div>
    <h1>{{ shop.name }}</h1>
    <div class="w-5">{% render 'CartMajor' %}</div>
  </div>
  <div>
    <nav
      class="hidden md:block h-screen md:h-4 w-full md:w-1/3 fixed top-0 left-0 md:inset-x-0 flex flex-col md:flex-row bg-black text-white md:bg-slate-900 md:text-neutral-100"
      id="mobile-menu"
    >
      {% for link in linklists['main-menu'].links %}
        <a href="{{ link.url }}" class="inline">{{ link.title }}</a>
      {% endfor %}
      <div class="w-5 fixed top-2 right-3" id="mobile-cancel">
        {% render 'MobileCancelMajor' %}
      </div>
    </nav>
  </div>
</header>
