<header>
  <div class="relative flex justify-between px-4 py-3">
    <div class="w-5" id="mobile-button">
      {% render 'MobileHamburgerMajor' %}
    </div>
    <h1>{{ shop.name }}</h1>
    <div class="w-5">{% render 'CartMajor' %}</div>
  </div>
  <div>
    <nav class="hidden h-screen w-full fixed top-0 left-0 flex flex-col bg-black text-white" id="mobile-menu">
      {% for link in linklists['main-menu'].links %}
        <a href="{{ link.url }}" class="inline">{{ link.title }}</a>
      {% endfor %}
      <div class="w-5 fixed top-0 right-0" id="mobile-cancel">
        {% render 'MobileCancelMajor' %}
      </div>
    </nav>
  </div>
</header>
