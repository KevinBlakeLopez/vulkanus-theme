<header class="bg-slate-900 text-neutral-100">
  <div class="relative flex justify-between px-4 py-3">
    <div class="md:hidden w-5" id="mobile-button">
      {% render 'MobileHamburgerMajor' %}
    </div>
    <h1>{{ shop.name }}</h1>
    <nav
      class="
        hidden h-screen w-full fixed top-0 left-0 flex flex-col bg-black text-white
        md:relative md:flex md:flex-row md:h-auto md:w-auto md:bg-slate-900 md:text-neutral-100
      "
      id="mobile-menu"
    >
      {% for link in linklists['main-menu'].links %}
        <a href="{{ link.url }}" class="inline-block p-3 md:pr-5 md:py-0">{{ link.title }}</a>
      {% endfor %}
      <div class="w-5 fixed top-2 right-3 md:hidden" id="mobile-cancel">
        {% render 'MobileCancelMajor' %}
      </div>
    </nav>
    <div class="w-5">{% render 'CartMajor' %}</div>
  </div>
</header>
